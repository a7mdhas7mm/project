@model MovieStoreMvc.Models.Domain.Movie
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Movie</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('https://i.ibb.co/Wn6Knv3/TR-tr-20231218-popsignuptwoweeks-perspective-alpha-website-large.jpg');
            color: #fff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        form {
            margin: 50px 0 0 50px;
            max-width: 600px;
            padding: 20px;
            border-radius: 8px;
            background-color: #fff;
        }

        h2 {
            margin-bottom: 20px;
            font-size: 28px;
        }

        .input-container {
            margin-bottom: 15px;
        }

        label {
            display: inline-block;
            width: 30%;
            font-size: 18px;
        }

        .input {
            width: 70%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #000;
        }

        .message-box {
            color: #f00;
        }

        .btn {
            padding: 10px 20px;
            margin-right: 10px;
        }

        .btn-default {
            background-color: #333;
            border: 1px solid #fff;
            color: #fff;
        }

        .btn-sec {
            background-color: #555;
            border: 1px solid #fff;
            color: #fff;
        }
    </style>
</head>
<body>
    <form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" class="input" asp-for="Id">
        <input type="hidden" class="input" asp-for="MovieImage">

        <div class="input-container">
            <label asp-for="Title" class="w-40">Title</label>
            <input type="text" class="input" asp-for="Title">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Title"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Director" class="w-40">Image</label>
            <input type="file" asp-for="ImageFile">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="ImageFile"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Genres" class="w-40">Genre</label>
            <select asp-items="Model.MultiGenreList" class="input" asp-for="Genres" multiple>
                <option value="">--select--</option>
            </select>
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Genres"> </span>
        </div>

        <div class="input-container">
            <label asp-for="ReleaseYear" class="w-40">Released Year</label>
            <input type="text" class="input" asp-for="ReleaseYear">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="ReleaseYear"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Cast" class="w-40">Cast</label>
            <input type="text" class="input" asp-for="Cast">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Cast"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Director" class="w-40">Director</label>
            <input type="text" class="input" asp-for="Director">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Director"> </span>
        </div>

        @if (TempData["msg"] != null)
        {
            <div class="alert mb-1">
                @TempData["msg"]
            </div>
        }

        <div class="input-container">
            <button class="btn btn-default" type="submit">Save</button>
            <a class="btn btn-sec" href="/Movie/MovieList">All records</a>
        </div>
    </form>
</body>
</html>
