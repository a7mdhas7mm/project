@model MovieStoreMvc.Models.DTO.LoginModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS for login page -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('https://i.ibb.co/Wn6Knv3/TR-tr-20231218-popsignuptwoweeks-perspective-alpha-website-large.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #ffffff;
        }

        /* Additional styles for login page */
        .login-container {
            width: 400px;
            margin: 100px auto;
            padding: 30px;
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.5);
            border: 2px solid #ffffff;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 30px;
            }

        .form-control {
            border-radius: 25px;
            padding: 15px;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .login-btn {
            border-radius: 25px;
            padding: 12px;
            background-color: #ff0000;
            border: none;
            color: white;
        }

            .login-btn:hover {
                background-color: #cc0000;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-container">
                    <h2>Login</h2>
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Username" asp-for="Username">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                        </div>
                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-danger">@TempData["msg"]</div>
                        }
                        <button type="submit" class="btn btn-block btn-danger login-btn">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Include Bootstrap JS at the end of the body tag for better performance -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
